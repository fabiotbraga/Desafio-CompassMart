{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "outDir": "./dist",
    "target": "es6",
    "types" : [ "node" , "jest" ] ,
  },
  "exclude": [
    "node_modules",
     "**/*.test.*" , "**/__mocks__/*" , "**/__tests__/*" 
  ],
  "include": [
    "./src/**/*"
  ]
}
